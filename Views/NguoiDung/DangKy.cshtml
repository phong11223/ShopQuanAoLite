
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-8 col-sm-offset-1">
        <div class="login-form">
            <!--login form-->
            <h1 style="text-align:center">Đăng ký thành viên</h1>
            <table align="center">
                @using (Html.BeginForm())
            {
                    @Html.ValidationSummary(true)

                    <tr style="height:40px">
                         <td>Tên đăng nhập:</td>
                         <td>
                            @Html.TextBox("TenDangNhap")
                            @ViewData["tendangnhap"]                
                        </td>   
                    </tr>
                    <tr style="height:40px">
                        <td>  Mật khẩu:</td>
                        <td>
                            @Html.Password("Matkhau")
                            @ViewData["matkhau"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Nhập lại mật khẩu: </td>
                        <td>
                            @Html.Password("NhapLaiMatKhau")
                            @ViewData["nhalaimatkhau"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td> Họ tên khách hàng:</td>
                        <td>
                            @Html.TextBox("HoTen")
                            @ViewData["hoten"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td> Địa chỉ:</td>
                        <td>
                            @Html.TextBox("Diachi")
                            @ViewData["diachi"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td> Email:</td>
                        <td>
                            @Html.TextBox("Email")
                            @ViewData["email"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Điện thoại:</td>
                        <td>
                            @Html.TextBox("SoDienThoai")
                            @ViewData["sodienthoai"]
                        </td>
                        <p style="color:red;padding-left: 180px;">@ViewBag.ThongBao</p>
                    </tr>
                    <tr style="height:40px">
                        <td></td>
                        <td>
                            <button type="Submit" class="btn btn-primary">Đăng ký</button>
                        </td>
                    </tr>
                }
                </table>
        </div><!--/login form-->
    </div>
</div>

