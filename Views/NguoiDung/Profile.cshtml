@model ShopQuanAoLite.Models.KhachHang
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Thông tin tài khoản</h2>
            <div class="box-icon">
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class='table table-striped table-bordered bootstrap-datatable '>
                <tbody>
                    @{
                        var session = (ShopQuanAoLite.Models.KhachHang)Session["Taikhoan"];
                        if (session != null)
                        {
                            <tr>
                                <td>Tên đăng nhập</td>
                                <td>@session.TenDangNhap</td>
                            </tr>
                            <tr>
                                <td>Họ tên</td>
                                <td>@session.HoTen</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>@session.Email</td>
                            </tr>
                            <tr>
                                <td>Địa chỉ</td>
                                <td>@session.DiaChi</td>
                            </tr>
                            <tr>
                                <td>Số điện thoại</td>
                                <td>@session.SoDienThoai</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div>
