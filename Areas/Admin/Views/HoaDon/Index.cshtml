@model IEnumerable<ShopQuanAoLite.Models.HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="/Admin/Home">Trang chủ</a>
        <i class="icon-angle-right"></i>
    </li>
    <li>
        Hóa đơn
    </li>
</ul>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Danh sách đơn hàng</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>

        <div class="box-content">

            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Ngày đặt hàng</th>
                        <th>Khách hàng</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Ghi chú</th>
                        <th>Tình trạng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.MaHD">
                            <td>@Html.DisplayFor(modelItem => item.NgayLapHD)</td>
                            <td>@Html.DisplayFor(modelItem => item.KhachHang.HoTen)</td>
                            <td>@Html.DisplayFor(modelItem => item.KhachHang.DiaChi)</td>
                            <td>@Html.DisplayFor(modelItem => item.KhachHang.SoDienThoai)</td>
                            <td>@Html.DisplayFor(modelItem => item.GhiChu)</td>
                            <td>@Html.DisplayFor(model => item.TrangThai)</td>
                            <td>
                                <a class="btn" href="/Admin/HoaDon/Details/@item.MaHD">Ctiết</a>
                                <a class="btn btn-info" href="/Admin/HoaDon/Edit/@item.MaHD"><i class="halflings-icon white edit"></i> Sửa</a>
                                <a class="btn btn-danger" data-ajax="true" data-ajax-complete="$('#row_@item.MaHD').remove()" data-ajax-confirm="Bạn có muốn xóa bản ghi này không?" data-ajax-method="Delete" href="/Admin/HoaDon/Delete/@item.MaHD">
                                    <i class="halflings-icon white trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div><!--/row-->