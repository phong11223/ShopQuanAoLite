@model IEnumerable<ShopQuanAoLite.Models.BinhLuan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="/Admin/Index">Trang chủ</a>
        <i class="icon-angle-right"></i>
    </li>
    <li>
        Sản phẩm
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">Bình luận</a></li>
</ul>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Kích thước</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>

        <div class="box-content">

            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>
                            Tiêu đề
                        </th>
                        <th>
                            Tên Người bình luận
                        </th>
                        <th>Nội dung</th>
                        <th>Ngày bình luận</th>
                        <th>Tên Sản phẩm</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.MaBL">
                            <td>@item.TieuDe</td>
                            <td>@Html.DisplayFor(model => item.KhachHang.HoTen)</td>
                            <td>@item.NoiDung</td>
                            <td>@item.NgayBL</td>
                            <td>@Html.DisplayFor(model => item.SanPham.TenSP)</td>
                            <td>@Html.DisplayFor(model => item.TrangThai)</td>
                            <td>
                                <a class="btn btn-info" href="/Admin/BinhLuan/Edit/@item.MaBL"><i class="halflings-icon white edit"></i> Sửa</a>
                                <a class="btn btn-danger" data-ajax="true" data-ajax-complete="$('#row_@item.MaBL').remove()" data-ajax-confirm="Bạn có muốn xóa bản ghi này không?" data-ajax-method="Delete" href="/Admin/BinhLuan/Delete/@item.MaBL">
                                    <i class="halflings-icon white trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div><!--/row-->
